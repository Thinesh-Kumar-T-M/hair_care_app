#!/usr/bin/env sh

# Gradle wrapper script
# This script allows you to run Gradle tasks without requiring a local Gradle installation.

set -e

DIR="$(cd "$(dirname "$0")" && pwd)"
GRADLE_WRAPPER_JAR="$DIR/gradle/wrapper/gradle-wrapper.jar"

if [ ! -f "$GRADLE_WRAPPER_JAR" ]; then
  echo "Gradle wrapper JAR not found at $GRADLE_WRAPPER_JAR"
  exit 1
fi

exec java -jar "$GRADLE_WRAPPER_JAR" "$@"