#!/usr/bin/env sh

# Gradle wrapper script
# This script is used to execute Gradle commands in a consistent manner across different environments.

set -e

DIR="$(cd "$(dirname "$0")" && pwd)"
DEFAULT_GRADLE_VERSION=7.0
GRADLE_USER_HOME="${GRADLE_USER_HOME:-$HOME/.gradle}"

if [ -z "$GRADLE_HOME" ]; then
  GRADLE_HOME="$DIR/gradle"
fi

if [ ! -d "$GRADLE_HOME" ]; then
  echo "Gradle home directory does not exist: $GRADLE_HOME"
  exit 1
fi

# Execute Gradle
exec "$GRADLE_HOME/bin/gradle" "$@"